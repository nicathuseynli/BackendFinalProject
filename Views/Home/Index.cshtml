      <!-- Begin Product Area -->
      <div class="product-area section-space-top-100">
        <div class="container">
          <div class="row">
            <div class="section-title-wrap without-tab">
              <h2 class="section-title">New Products</h2>  
              <p class="section-desc">
               @Model.HomeDescriptions?.NewProductInfo 
              </p>
            
            </div>
            <div class="col-lg-12">
              <div class="swiper-container product-slider">
                <div class="swiper-wrapper">
                    @foreach (var newproduct in Model.NewProducts)
                        {
                            
                  <div class="swiper-slide product-item">
                    <div class="product-img">
                      <a asp-controller="Shop" asp-action="Index">
                        <img
                          class="primary-img"
                          src="~/images/@newproduct.ProductImg"
                          alt="Product Images"
                        />
                        <img
                          class="secondary-img"
                          src="~/images/@newproduct.HoverImg"
                          alt="Product Images"
                        />
                     </a>
                      <div class="product-add-action">
                        <ul>
                          <li>
                            <a
                              asp-controller="Shop" asp-action="Index"
                              data-tippy="Add to wishlist"
                              data-tippy-inertia="true"
                              data-tippy-animation="shift-away"
                              data-tippy-delay="50"
                              data-tippy-arrow="true"
                              data-tippy-theme="sharpborder"
                            >
                              <i class="pe-7s-like"></i>
                           </a>
