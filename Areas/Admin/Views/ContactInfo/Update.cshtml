@model UpdateContactInfoVM
<div class="container">
    <h1 class="text-center">Update Contact Information</h1>
    @*  <img src="~/images/@Model.Image" width="500px" height="500px"/>*@
     <div class="row">
             <form asp-action="Update" method="post" class="forms-sample" enctype="multipart/form-data">
                  <div class="form-group">
                   <input asp-for="ContactDescription" class="form-control" placeholder="ContactDescription">
                 </div>
                 <div class="form-group">
                   <input asp-for="MailAddress" class="form-control"placeholder="MailAddress">
                 </div>
                  <div class="form-group">
                   <input asp-for="PhoneNumber" class="form-control"placeholder="PhoneNumber">
                 </div>   
                 <div class="form-group">
                   <input asp-for="Address" class="form-control"placeholder="Address">
                 </div>
                 <button type="submit" class="btn btn-outline-success me-2">Update</button>
                 <input type="hidden" asp-for="Id"/>
                 <button asp-action="Index" class="btn btn-outline-danger">Cancel</button>
             </form>
      </div>
</div>