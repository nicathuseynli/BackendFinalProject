@model UpdateQuickLinkVM
<div class="container">
    <h1 class="text-center">Update QuickLink</h1>
      <div class="row">
             <form asp-action="Update" method="post" class="forms-sample" enctype="multipart/form-data">
                 <div class="form-group">
                   <input asp-for="Description" class="form-control"placeholder="Description">
                 </div>
                  <div class="form-group">
                   <input asp-for="TelephoneNumber" class="form-control" placeholder="TelephoneNumber">
                 </div>
                 <button type="submit" class="btn btn-outline-success me-2">Update</button>
                 <input type="hidden" asp-for="Id"/>
                 <button asp-action="Index" class="btn btn-outline-danger">Cancel</button>
             </form>
      </div>
</div>

