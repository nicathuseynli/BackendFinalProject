@model UpdateNewProductVM
<div class="container">
    <h1 class="text-center">Update NewProduct</h1>
      <img src="~/images/@Model.ProductImg" width="500px" height="500px"/>
      <img src="~/images/@Model.HoverImg" width="500px" height="500px"/>
      <div class="row">
             <form asp-action="Update" method="post" class="forms-sample" enctype="multipart/form-data">
                  <div class="form-group">
                   <input asp-for="Name" class="form-control" placeholder="Name">
                 </div>
                 <div class="form-group">
                   <input asp-for="Price" class="form-control"placeholder="Price">
                 </div> <div class="form-group">
                   <input asp-for="Rating" class="form-control"placeholder="Rating">
                 </div>
                 <div class="form-group">
                   <label>Product Image</label>
                   <input asp-for="Photo" class="form-control">
                 </div>  <div class="form-group">
                   <label>Product Hover Image</label>
                   <input asp-for="HoverPhoto" class="form-control">
                 </div>
                 <button type="submit" class="btn btn-outline-success me-2">Update</button>
                 <input type="hidden" asp-for="Id"/>
                 <button asp-action="Index" class="btn btn-outline-danger">Cancel</button>
             </form>
      </div>
</div>
