@model List<Slider>
@{
    int count = 1;
}
<div class="container">
     <div class="row">
          <div style="display:flex;justify-content:end"/>
            <a asp-action="Create" class="btn btn-outline-success" style="">Create</a>
          </div>
         <table class="table">
             <thead>
                 <tr>
                     <th scope="col">#</th>
                     <th scope="col">Label</th>  
                     <th scope="col">Description</th>
                     <th scope="col">Percent</th>
                     <th scope="col">Image</th>
                     <th scope="col">Settings</th>
                 </tr>
             </thead>
             <tbody>
                @foreach(var slider in Model)
                {
                    <tr>  
                        <td scope="col">@(count++)</td> 
                        <td scope="col">@slider.Label</td>
                        <td scope="col">@slider.Description</td>
                        <td scope="col">@slider.Percent</td>
                        <td scope="col">
                            <img src="~/images/@slider.Image"/>
                        </td>
                        <td>
                          <a asp-route-id="@slider.Id" asp-action="Details" class="btn btn-outline-info">Details</a>
                             <a asp-route-id="@slider.Id" asp-action="Update" class="btn btn-outline-warning">Update</a>
                             <form style="display:inline-block" asp-action="Delete" method="post">
                               <input type="submit" asp-route-id="@slider.Id" asp-action="Delete"class="btn btn-outline-danger"/>
                             </form>
                        </td>
                    </tr>
                }
            </tbody>
         </table>
</div>

