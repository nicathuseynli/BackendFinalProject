@model UpdateTestimonialVM
<div class="container">
    <h1 class="text-center">Update Testimonial</h1>
      <img src="~/images/@Model.ClientImage" width="500px" height="500px"/>
      <div class="row">
             <form asp-action="Update" method="post" class="forms-sample" enctype="multipart/form-data">
         @*        <div class="form-group">
                   <input asp-for="Information" class="form-control" placeholder="Information">
                 </div>*@
                 <div class="form-group">
                   <input asp-for="FullName" class="form-control" placeholder="FullName">
                 </div>
                 <div class="form-group">
                   <input asp-for="Comment" class="form-control"placeholder="Comment">
                 </div>   
                 <div class="form-group">
                   <input asp-for="Profession" class="form-control"placeholder="Profession">
                 </div>
                 <div class="form-group">
                   <label>Client Image</label>
                   <input asp-for="Photo" class="form-control">
                 </div>
                 <button type="submit" class="btn btn-outline-success me-2">Update</button>
                 <input type="hidden" asp-for="Id"/>
                 <button asp-action="Index" class="btn btn-outline-danger">Cancel</button>
             </form>
      </div>
</div>
