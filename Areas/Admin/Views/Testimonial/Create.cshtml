@model CreateTestimonialVM
<div class="container">
    <h1 class="text-center">Create Testimonial</h1>
      <div class="row">
             <form asp-action="Create" method="post" class="forms-sample" enctype="multipart/form-data">
                   <div class="form-group">
                   <input asp-for="Comment" class="form-control"placeholder="Comment">
                 </div>
                 <div class="form-group">
                   <input asp-for="Information" class="form-control" placeholder="Information">
                 </div>
                 <div class="form-group">
                   <input asp-for="Profession" class="form-control"placeholder="Profession">
                 </div>    <div class="form-group">
                   <input asp-for="FullName" class="form-control"placeholder="FullName">
                 </div>
                 <div class="form-group">
                   <label>Client Image</label>
                   <input asp-for="Photo" class="form-control">
                 </div>
                 <button type="submit" class="btn btn-outline-success me-2">Create</button>
                 <button asp-action="Index" class="btn btn-outline-danger">Cancel</button>
             </form>
    </div>
</div>
