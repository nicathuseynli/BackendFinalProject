@model UpdateSocialMediaVM
<div class="container">
    <h1 class="text-center">Update Social Media Address</h1>
      <div class="row">
             <form asp-action="Update" method="post" class="forms-sample" enctype="multipart/form-data">
                  <div class="form-group">
                   <input asp-for="FacebookLink" class="form-control" placeholder="FacebookLink">
                 </div>  
                 <div class="form-group">
                   <input asp-for="TwitterLink" class="form-control" placeholder="TwitterLink">
                 </div>    
                 <div class="form-group">
                   <input asp-for="PinterestLink" class="form-control" placeholder="PinterestLink">
                 </div>
                 <div class="form-group">
                   <input asp-for="DribbbleLink" class="form-control"placeholder="DribbbleLink">
                 </div>
                 <button type="submit" class="btn btn-outline-success me-2">Update</button>
                 <input type="hidden" asp-for="Id"/>
                 <button asp-action="Index" class="btn btn-outline-danger">Cancel</button>
             </form>
      </div>
</div>

