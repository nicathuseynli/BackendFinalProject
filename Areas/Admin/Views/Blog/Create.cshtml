@model CreateBlogVM
<div class="container">
    <h1 class="text-center">Create Blog </h1>
      <div class="row">
             <form asp-action="Create" method="post" class="forms-sample" enctype="multipart/form-data">
                 <div class="form-group">
                   <input asp-for="ByPerson" class="form-control" placeholder="ByPerson">
                 </div>
@*                 <div class="form-group">
                   <input asp-for="BlogDescription" class="form-control" placeholder="BlogDescription">
                 </div>*@
                 <div class="form-group">
                   <input asp-for="BlogInformation" class="form-control"placeholder="BlogInformation">
                 </div>  <div class="form-group">
                   <input asp-for="BlogTitle" class="form-control"placeholder="BlogTitle">
                 </div> 
                 <div class="form-group">
                   <label>About Image</label>
                   <input asp-for="Photo" class="form-control">
                 </div>
                 <button type="submit" class="btn btn-outline-success me-2">Create</button>
                 <button asp-action="Index" class="btn btn-outline-danger">Cancel</button>
             </form>
    </div>
</div>
