             <form asp-action="Update" method="post" class="forms-sample" enctype="multipart/form-data">
                  <div class="form-group">
                   <input asp-for="BlogDescription" class="form-control" placeholder="Blog-Description">
                 </div>
                 <div class="form-group">
                   <input asp-for="BlogInformation" class="form-control"placeholder="Blog-Information">
                 </div>
                  <div class="form-group">
                   <input asp-for="BlogTitle" class="form-control"placeholder="Blog-Title">
                 </div><div class="form-group">
